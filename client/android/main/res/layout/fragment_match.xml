<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.speedycrew.client.MatchFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="My search id" />

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/other_search_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Their search id" />

        <TextView
            android:id="@+id/other_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="other_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/username_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Their username" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/email_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Their email" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fingerprint_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Their fingerprint" />

        <TextView
            android:id="@+id/fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fingerprint" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/longitude_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Longitude" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="longitude" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/latitude_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Latitude" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="latitude" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/matches_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Number of matches" />

        <TextView
            android:id="@+id/matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="matches" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/distance_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Distance" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/score_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Score" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score" />
    </LinearLayout>

    <View
        android:id="@+id/primerdivisor"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/query_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:text="Their query" />

        <TextView
            android:id="@+id/query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="query" />
    </LinearLayout>

</LinearLayout>