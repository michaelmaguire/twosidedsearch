<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

        <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_contact_email"
        android:inputType="textCapWords"
        android:key="contact_email"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_contact_email" />
    
    
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_show_contact_email_titles"
        android:entryValues="@array/pref_show_contact_email_values"
        android:key="show_contact_email_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_show_contact_email" />

</PreferenceScreen>